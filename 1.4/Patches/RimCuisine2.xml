<?xml version="1.0" encoding="utf-8" ?>
<Patch>	
	<Operation Class="PatchOperationFindMod">
				<mods>
					<li>RimCuisine 2 Core (Continued)</li>
				</mods>
		<match Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationInsert">
				<success>Always</success>
				<xpath>Defs/ThingDef[@Name="RC2_PlantBase"]/altitudeLayer</xpath>
				<value>
					<minifiedDef>MinifiedTree</minifiedDef>
				</value>
			</li>
			
			<li Class="PatchOperationInsert">
				<success>Always</success>
				<xpath>Defs/ThingDef[@Name="RC2_PlantBase"]/plant</xpath>
				<value>
					<thingCategories>
						<li>Plants</li>
					</thingCategories>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<success>Always</success>
				<xpath>Defs/ThingDef[@Name="RC2_PlantBase"]/statBases</xpath>
				<value>
					<Mass>1</Mass>
				</value>
			</li>
			
			<li Class="PatchOperationAdd">
				<success>Always</success>
				<xpath>Defs/ThingDef[@Name="RC2_PlantBase"]/plant</xpath>
				<value>
					<treeLoversCareIfChopped>false</treeLoversCareIfChopped>
				</value>
			</li>
		</operations>
		</match>
	</Operation>
</Patch>